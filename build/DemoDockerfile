FROM mcr.microsoft.com/dotnet/core/aspnet:3.1.4-buster-slim AS base
WORKDIR /app
EXPOSE 80
FROM  mcr.microsoft.com/dotnet/core/sdk:3.1.300-buster AS build
WORKDIR /src
COPY ./Directory.Build.props ./Directory.Build.props
COPY ./build ./build
COPY ./src ./src
COPY ./demos ./demos
COPY ./tools ./tools
WORKDIR /src/demos/WebApp
RUN dotnet restore -s https://repo.forge.lmig.com/api/nuget/nuget
RUN dotnet build -c Release -o /app --no-restore
FROM build AS publish
RUN dotnet publish -c Release -o /app
FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet","WebApp.dll"]